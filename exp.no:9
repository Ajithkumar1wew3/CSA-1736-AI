from itertools import permutations

# Travelling Salesman Problem using Brute Force

def travelling_salesman(graph, start):
    nodes = list(graph.keys())
    nodes.remove(start)

    min_cost = float('inf')
    best_path = None

    # Generate all permutations of remaining cities
    for perm in permutations(nodes):
        current_cost = 0
        current_path = [start] + list(perm) + [start]  # return to start

        # Calculate cost of the path
        for i in range(len(current_path) - 1):
            current_cost += graph[current_path[i]][current_path[i+1]]

        # Update shortest path
        if current_cost < min_cost:
            min_cost = current_cost
            best_path = current_path

    return best_path, min_cost


# Example Graph (Adjacency Matrix)
graph = {
    'A': {'A': 0, 'B': 10, 'C': 15, 'D': 20},
    'B': {'A': 10, 'B': 0, 'C': 35, 'D': 25},
    'C': {'A': 15, 'B': 35, 'C': 0, 'D': 30},
    'D': {'A': 20, 'B': 25, 'C': 30, 'D': 0}
}

start_node = 'A'

path, cost = travelling_salesman(graph, start_node)

print("Shortest Path:", path)
print("Minimum Cost:", cost)
