from collections import deque

def water_jug_bfs(jug1, jug2, target):
    visited = set()
    queue = deque()

    # Start with both jugs empty
    queue.append((0, 0))
    visited.add((0, 0))

    while queue:
        x, y = queue.popleft()

        # If target amount reached
        if x == target or y == target:
            print("Solution Found:")
            print(f"Jug1: {x}  Jug2: {y}")
            return True

        # Possible next states
        next_states = set()

        # 1. Fill Jug1
        next_states.add((jug1, y))

        # 2. Fill Jug2
        next_states.add((x, jug2))

        # 3. Empty Jug1
        next_states.add((0, y))

        # 4. Empty Jug2
        next_states.add((x, 0))

        # 5. Pour Jug1 → Jug2
        pour = min(x, jug2 - y)
        next_states.add((x - pour, y + pour))

        # 6. Pour Jug2 → Jug1
        pour = min(y, jug1 - x)
        next_states.add((x + pour, y - pour))

        # Process new states
        for state in next_states:
            if state not in visited:
                visited.add(state)
                queue.append(state)
                print("Visited:", state)

    print("No solution possible.")
    return False


# Example usage:
jug1_capacity = 4
jug2_capacity = 3
target_amount = 2

water_jug_bfs(jug1_capacity, jug2_capacity, target_amount)
