from itertools import permutations

def solve_crypt_arithmetic(words):
    # Extract unique characters
    chars = set("".join(words))
    if len(chars) > 10:
        print("Too many characters (max 10 allowed).")
        return

    chars = list(chars)
    first_letters = set(word[0] for word in words)  # cannot be zero

    for perm in permutations(range(10), len(chars)):
        assignment = dict(zip(chars, perm))

        # Skip if any leading character is assigned zero
        if any(assignment[ch] == 0 for ch in first_letters):
            continue

        # Convert words to numbers
        nums = []
        for word in words:
            value = 0
            for ch in word:
                value = value * 10 + assignment[ch]
            nums.append(value)

        # Check equation: WORD1 + WORD2 = RESULT
        if nums[0] + nums[1] == nums[2]:
            print("\nSolution Found:")
            for ch in chars:
                print(f"{ch} = {assignment[ch]}")
            print(f"\n{words[0]} = {nums[0]}")
            print(f"{words[1]} = {nums[1]}")
            print(f"{words[2]} = {nums[2]}")
            return

    print("No solution exists.")


# Example Use: SEND + MORE = MONEY
solve_crypt_arithmetic(["SEND", "MORE", "MONEY"])
